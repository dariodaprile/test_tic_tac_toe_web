<h1> The Ultimate Tic Tac Toe </h1>
<form action="/" method="post">
  <div class="message"><%= @message %> and press
    <button type="submit">Submit</button>
    to confirm
  </div>
  <br>
  <div class="board">
    <% @game.board.flatten.each do |cell| %>
      <input type="text" name="cells[]" maxlength="1" pattern="[X,0, ]" title="Only X or 0" class="cells" value="<%= cell %>" />
    <% end %>
  </div>
</form>